# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# YouTube API Configuration
# Get these from Google Cloud Console (https://console.cloud.google.com)
# Enable YouTube Data API v3 and create OAuth 2.0 credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=https://prafunschool.web.id/api/auth/youtube/callback

# Database Configuration (optional - currently using file storage)
# DATABASE_URL=mongodb://localhost:27017/video-downloader
# REDIS_URL=redis://localhost:6379

# Security
# SESSION_SECRET=your_random_session_secret_here

# File Storage
MAX_FILE_SIZE=2GB
CLEANUP_INTERVAL=24h

# FFmpeg Configuration
# FFMPEG_PATH=/usr/bin/ffmpeg
# FFPROBE_PATH=/usr/bin/ffprobe

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Origins
CORS_ORIGINS=https://prafunschool.web.id,http://localhost:3000 